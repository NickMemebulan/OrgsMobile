<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OrgLayoutFragmentPublic"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/createActivityForm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/create_activity_form"
            android:textSize="22sp"
            android:padding="8dp"
            android:background="@drawable/maroon_box_white_border"
            android:textColor="@color/colorDirtyWhite" />

        <TextView
            android:id="@+id/updateMembershipRoster"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/update_members"
            android:textSize="22sp"
            android:padding="8dp"
            android:background="@drawable/maroon_box_white_border"
            android:textColor="@color/colorDirtyWhite"/>

        <TextView
            android:id="@+id/updateOrganizationProfile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/update_org_profile"
            android:textSize="22sp"
            android:padding="8dp"
            android:background="@drawable/maroon_box_white_border"
            android:textColor="@color/colorDirtyWhite"/>

        <TextView
            android:id="@+id/updateOrganizationFiles"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/update_org_files"
            android:textSize="22sp"
            android:padding="8dp"
            android:background="@drawable/maroon_box_white_border"
            android:textColor="@color/colorDirtyWhite"/>

        <TextView
            android:id="@+id/updateAdvisers"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/update_advisers"
            android:textSize="22sp"
            android:padding="8dp"
            android:background="@drawable/maroon_box_white_border"
            android:textColor="@color/colorDirtyWhite"/>

        <TextView
            android:id="@+id/changePointPerson"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/change_point_person"
            android:textSize="22sp"
            android:padding="8dp"
            android:background="@drawable/maroon_box_white_border"
            android:textColor="@color/colorDirtyWhite"/>

    </LinearLayout>

</ScrollView>