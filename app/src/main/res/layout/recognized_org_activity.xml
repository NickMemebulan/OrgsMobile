<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">
    <!--tools:openDrawer="start"-->
    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".RecognizedOrgsActivity">

        <include
            android:id="@+id/recognizedToolbar"
            layout="@layout/toolbar_layout"/>

        <TextView
            android:id="@+id/listHeaderTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:text="@string/list_of_recognized"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/recognizedToolbar" />

        <LinearLayout
            android:id="@+id/college_based"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/groupByButton">

            <TextView
                android:id="@+id/univBasedOrgs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginRight="16dp"
                android:background="@drawable/square"
                android:padding="8dp"
                android:text="@string/univ_based"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/caBasedOrgs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginRight="16dp"
                android:background="@drawable/square"
                android:padding="8dp"
                android:text="@string/ca_based"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/casBasedOrgs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginRight="16dp"
                android:background="@drawable/square"
                android:padding="8dp"
                android:text="@string/cas_based"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/cdcBasedOrgs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginRight="16dp"
                android:background="@drawable/square"
                android:padding="8dp"
                android:text="@string/cdc_based"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/ceatBasedOrgs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginRight="16dp"
                android:background="@drawable/square"
                android:padding="8dp"
                android:text="@string/ceat_based"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/cemBasedOrgs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginRight="16dp"
                android:background="@drawable/square"
                android:padding="8dp"
                android:text="@string/cem_based"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/cfnrBasedOrgs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginRight="16dp"
                android:background="@drawable/square"
                android:padding="8dp"
                android:text="@string/cfnr_based"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/cheBasedOrgs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginRight="16dp"
                android:background="@drawable/square"
                android:padding="8dp"
                android:text="@string/che_based"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/cvmBasedOrgs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginRight="16dp"
                android:background="@drawable/square"
                android:padding="8dp"
                android:text="@string/cvm_based"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/gsBasedOrgs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginRight="16dp"
                android:background="@drawable/square"
                android:padding="8dp"
                android:text="@string/gs_based"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/type_based"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:orientation="vertical"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/groupByButton">

            <TextView
                android:id="@+id/academicBased"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginRight="16dp"
                android:background="@drawable/square"
                android:padding="8dp"
                android:text="@string/academic_based"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/culturalBased"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginRight="16dp"
                android:background="@drawable/square"
                android:padding="8dp"
                android:text="@string/cultural_based"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/fraternityBased"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginRight="16dp"
                android:background="@drawable/square"
                android:padding="8dp"
                android:text="@string/fraternities_based"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/internationalBased"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginRight="16dp"
                android:background="@drawable/square"
                android:padding="8dp"
                android:text="@string/international_based"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/politicalBased"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginRight="16dp"
                android:background="@drawable/square"
                android:padding="8dp"
                android:text="@string/political_based"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/religiousBased"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginRight="16dp"
                android:background="@drawable/square"
                android:padding="8dp"
                android:text="@string/religious_based"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/socioCivicBased"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginRight="16dp"
                android:background="@drawable/square"
                android:padding="8dp"
                android:text="@string/socio_civic_based"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/sororityBased"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginRight="16dp"
                android:background="@drawable/square"
                android:padding="8dp"
                android:text="@string/sororities_based"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/sportsRecreationalBased"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginRight="16dp"
                android:background="@drawable/square"
                android:padding="8dp"
                android:text="@string/sports_recreational_based"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/varsitarianBased"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginRight="16dp"
                android:background="@drawable/square"
                android:padding="8dp"
                android:text="@string/varsitarian_based"
                android:textSize="16sp" />
        </LinearLayout>

        <Button
            android:id="@+id/groupByButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/group_by"
            android:background="@color/colorMaroon"
            android:textColor="@color/colorDirtyWhite"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            app:layout_constraintStart_toStartOf="@+id/listHeaderTextView"
            app:layout_constraintTop_toBottomOf="@+id/listHeaderTextView" />

    </android.support.constraint.ConstraintLayout>

    <android.support.design.widget.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"
        app:headerLayout="@layout/nav_header"
        app:menu="@menu/nav_drawer_menu"/>

</android.support.v4.widget.DrawerLayout>